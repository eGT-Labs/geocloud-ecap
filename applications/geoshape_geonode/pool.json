		{
			"name":"geoshape-pool",
			"min-size":1,
			"max-size":1,
			"associate-public-ip":true,
<% if $ubuntu then %>
			"ssh_user": "ubuntu",
<% end %>
			"loadbalancers":[
				{
					"concurrent-load-balancer":"main"
				}
			],
			"run_list":[
				"role[geoshape_geonode]"
			],
<% if $rds then %>
			"dependencies":[
				{
					"name":"postgis",
					"type":"database"
				}
			],
<% end %>
			"add_firewall_rules": [
				{
					"rule_name":"geoshape_geonode"
				}
			],
			"vpc": {
				"vpc_name":"<%=$vpc_name %>",
				<% if $deploy_id then %>
        "deploy_id":"<%= $deploy_id %>,"
				<% end %>
				"subnet_pref": "all_private",
				"nat_host_name":"<%=$bastion_name %>",
				"nat_ssh_user":"<%=$nat_ssh_user %>"
			},
		    "vault_access" : [{
		            "vault" : "geoshape_geonode",
		            "item" : "geoshape_os"
		        },
		        {
		            "vault" : "geoshape_geonode",
		            "item" : "unison_os"
		        }
		    ],
			"basis":{
				"launch-config":{
					"name":"geoshape_geonode",
<% if $centos then %>
	<%= include("../centos-ami.json") %>,
<% elsif $ubuntu then %>
	<%= include("../ubuntu-ami.json") %>,
<% end %>
					"iam-policies":[
<%= include("../default_iam_node_policies.json") %>
					],
<% if $environment == "dev" then %>
					"size":"m3.small",
<% else %>
					"size":"m3.medium",
<% end %>
					"storage":[
						{
<% if $centos then %>
							"device":"/dev/sda",
<% elsif $ubuntu then %>
							"device":"/dev/sda1",
<% end %>
							"size":50
						}
					]
				}
			}
		}
