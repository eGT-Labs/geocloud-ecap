		{
			"name":"main",
			"vpc": {
<% if !$deploy_id then %>
				"vpc_name":"ogeosuite-vpc",
				"subnets":[
					{
						"subnet_name":"Public1"
					},
					{
						"subnet_name":"Public2"
					},
					{
						"subnet_name":"Public3"
					},
					{
						"subnet_name":"Public4"
					}
				]
<% else %>
	<% if $environment == "dev" then %>
				"vpc_name":"dev-vpc",
	<% elsif $environment == "prod" then %>
				"vpc_name":"prod-vpc",
	<% end %>
				"deploy_id":"<%= $deploy_id %>",
				"subnets":[
					{
						"subnet_name":"PubSubnet1"
					},
					{
						"subnet_name":"PubSubnet2"
					},
					{
						"subnet_name":"PubSubnet3"
					},
					{
						"subnet_name":"PubSubnet4"
					}
				]

<% end %>
			},
			"cross_zone_unstickiness":true,
			"idle_timeout":1020,
			"connection_draining_timeout":300,
			"healthcheck": {
				"target":"HTTP:8080/geoserver/web/",
				"unhealthy-threshold":3,
				"healthy-threshold":3
			},
			"lb_cookie_stickiness_policy": {
				"name": "Geoserver"
			},
			"add_firewall_rules": [
				{
					"rule_name":"geoserver_lb"
				}
			],
			"listeners": [
				{
					"lb-port": 80,
					"lb-protocol": "HTTP",
					"instance-port": 8080,
					"instance-protocol": "HTTP"
				}
			]
		}
