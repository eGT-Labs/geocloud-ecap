		{
			"name":"geoserver",
<% if $environment == "prod" then %>
			"min-size":2,
			"max-size":4,
			"wait-for-nodes":1,
			"sync_siblings":true,
<% else %>
			"min-size":1,
			"max-size":1,
<% end %>
			"loadbalancers":[
				{
					"concurrent-load-balancer":"main"
				}
			],
			"run_list":[
				"role[opengeo_suite]"
			],
			"dependencies":[
				{
					"name":"postgis",
					"type":"database"
				}
			],
			"add_firewall_rules": [
				{
					"rule_name":"geoserver"
				}
			],
			"vpc":{
<% if !$deploy_id then %>
				"vpc_name":"ogeosuite-vpc",
				"nat_host_name":"bastion",
				"nat_ssh_user":"root",
				"subnets":[
					{
						"subnet_name":"Private1"
					},
					{
						"subnet_name":"Private2"
					},
					{
						"subnet_name":"Private3"
					}
				]
<% else %>
	<% if $environment == "dev" then %>
				"vpc_name":"dev-vpc",
				"nat_host_name":"dev-vpc-bastion",
	<% elsif $environment == "prod" then %>
				"vpc_name":"prod-vpc",
				"nat_host_name":"prod-vpc-bastion",
	<% end %>
				"deploy_id":"<%= $deploy_id %>",
				"nat_ssh_user":"root",
				"subnets":[
					{
						"subnet_name":"GISPrvSubnet1"
					},
					{
						"subnet_name":"GISPrvSubnet2"
					},
					{
						"subnet_name":"GISPrvSubnet3"
					}
				]
<% end %>
			},
		    "application_attributes":{
		            "glusterfs_master_ip": "<%=$glusterfs_master_ip%>",
<% if $existing_deployment == true then %>
		            "existing_deployment":true
<% else %>
		            "existing_deployment":false
<% end %>

			},
		    "vault_access" : [{
		            "vault" : "opengeo_suite",
		            "item" : "gs_root"
		        },
		        {
		            "vault" : "opengeo_suite",
		            "item" : "gs_admin"
		        },
		        {
		            "vault" : "opengeo_suite",
		            "item" : "postgres"
		        }
		    ],
			"basis":{
				"launch-config":{
					"name":"geoserver",
<%= CAP::Config.include("../centos-ami.json") %>,
					"iam-policies":[
<%= CAP::Config.include("../default_iam_node_policies.json") %>
					],
<% if $environment == "dev" then %>
					"size":"m3.large",
<% elsif $environment == "prod" then %>
					"size":"m3.xlarge",
<% else %>
					"size":"m3.medium",
<% end %>
					"storage":[
						{
							"device":"/dev/sda",
							"size":20
						},
						{
							"device":"/dev/xvdf",
							"size":50
						}
					]
				}
			}
		}
